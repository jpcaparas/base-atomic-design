{
  "name": "base-front-end",
  "version": "1.2.0",
  "description": "Front End bootstrap to get your next project off the ground, based on Atomic Design thinking.",
  "license": "UNLICENSED",
  "private": true,
  "author": "Te Riu Warren <te@pixelfusion.co.nz>",
  "contributors": [
    "Damian Peterson <dp@pixelfusion.co.nz>",
    "Hal Smith Stevens <hal@pixelfusion.co.nz>",
    "Tia Aoake <tia@pixelfusion.co.nz>",
    "Wouter Peschier <wouter@pixelfusion.co.nz>"
  ],
  "main": "public/index.php",
  "keywords": [],
  "scripts": {
    "build": "webpack --production",
    "test": "yarn run build && yarn run lint && yarn run test-unit",
    "lint": "yarn run lint-scss && yarn run lint-js",
    "lint-js": "eslint \"resources/assets/js/**/*.{js,jsx}\" --quiet --fix",
    "lint-scss": "stylelint resources/assets/sass/**/*.scss --syntax scss",
    "postinstall": "yarn run build",
    "preinstall": "cp ./setup/git-hooks/* ./.git/hooks && chmod +x ./.git/hooks/pre-*",
    "test-unit": "jest",
    "watch": "node webpack.server.js"
  },
  "jest": {
    "testRegex": "(/tests/unit/.*|\\.(test|spec))\\.(js|jsx)$",
    "coverageDirectory": "tests/coverage",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/pixelfusion/base-front-end.git"
  },
  "homepage": "https://github.com/pixelfusion/base-front-end#readme",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-jest": "^17.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-ie": "^6.6.2",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-react": "^6.5.0",
    "clean-webpack-plugin": "^0.1.9",
    "cors": "^2.7.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.1.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-filenames": "^1.0.0",
    "eslint-plugin-react": "^6.0.0",
    "extend": "^3.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "imports-loader": "^0.6.5",
    "jest-cli": "^17.0.0",
    "json-loader": "^0.5.4",
    "postcss": "^5.0.20",
    "postcss-cssnext": "^2.5.2",
    "postcss-easy-import": "^1.0.1",
    "postcss-loader": "^1.0.0",
    "postcss-math": "^0.0.5",
    "postcss-mixins": "^5.0.0",
    "postcss-remify": "^1.0.1",
    "postcss-scss": "^0.4.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-strip-inline-comments": "^0.1.3",
    "precss": "^1.4.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "style-loader": "^0.13.0",
    "stylelint": "^7.0.3",
    "stylelint-loader": "^6.0.0",
    "webpack": "^1.13.1",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-livereload-plugin": "^0.9.0",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "dependencies": {
    "normalize.css": "^5.0.0",
    "picturefill": "^3.0.2",
    "svg4everybody": "^2.0.3"
  }
}
